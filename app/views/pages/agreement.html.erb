<div class="container">
  <div class="d-flex flex-column justify-content-center align-items-center">
    <h1>Are you a nice person?</h1>
    <div class="d-flex">
      <%= simple_form_for @chef_profile do |f| %>
        <%= f.input :years_exp, label: 'Years of experience' %>
        <p>Your nice photo</p>
        <%= f.file_field :photo %>
        <%= f.button :submit, "YES", class: "btn btn-primary" %>
        <a href="/", class="btn btn-danger">Not really</a>
      <% end %>
    </div>
  </div>
</div>
