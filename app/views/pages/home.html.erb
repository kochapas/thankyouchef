<div class="banner d-flex flex-column justify-content-between">
  <span></span>
  <div class="container">
    <h2 class="mb-5">Hire your own personal Gordon Ramsay, without the yelling.</h2>
    <h3 class="mt-5">Browse our selection of courses...</h3>
    <form action="/courses">
      <div class="form-group row">
        <div class="col-8">
          <input type="text" class="form-control" id="query" name="query" value="" placeholder="Southern Fried Chicken Course">
        </div>
        <input type="submit" class="btn btn-light mr-3" value="Search now!">
        <a href="/courses" class="btn btn-light d-flex align-items-center justify-content-center">Show all courses</a>
      </div>
    </form>
  </div>
  <span></span>
  <span></span>
</div>
<div class="container">
  <h2 class="mt-3">Famous Courses</h2>
  <div class="my-2">
    <%= render 'shared/carousel-course', courses: @courses, card_count: 4 %>
  </div>
</div>
