<div class="container">
  <% if params.key?(:chefdashboard) && current_user.chef? %>
    <h1>Your Chef Dashboard</h1>
    <% @chef_bookings.each do |booking| %>
      <%= render 'shared/course-confirm-card', booking: booking %>
    <% end %>
  <% else %>
    <h1>Your Booking</h1>
    <% @bookings.each do |booking| %>
      <%= link_to course_path(booking.course) do %>
        <% header_image_tag = booking.course.photo.attached? ? cl_image_tag(booking.course.photo.key)
      : cl_image_tag("https://source.unsplash.com/800x500/?food-'#{booking.course.name.split[-2]}'", :type=>"fetch") %>
        <% render 'shared/course-card', title: booking.course.name, status: booking.status, 
      description: "#{booking.date} / #{booking.time_slot}", sub_title: booking.course.cuisine_type,
      header_image_tag: header_image_tag,
      user_image_url: "https://source.unsplash.com/100x100/?face-'#{booking.course.chef_profile.user_id}'" %>
      <% end %>
    <% end %>
  <% end %>
</div>
