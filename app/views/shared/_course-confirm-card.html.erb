<div class="card-trip mb-3 d-flex flex-column justify-content-between">
  <%= header_image_tag %>
  <div class="card-trip-infos">
    <div class="d-flex flex-column justify-content-between h-100">
      <div class="card-text-wrap text-truncate">
        <h2><%=  booking.course.name %></h2>
        <p><%= booking.date_and_start_time %></p>
      </div>
      <div class="w-100 text-right">
        <% if booking.status == "awaiting confirmation" %>
          <div class="d-flex justify-content-end">
            <%= simple_form_for booking do |f| %>
              <%= f.input :status, as: :hidden, input_html: { value: 'confirmed'} %>
              <%= f.submit 'Confirm', class: 'btn btn-success btn-sm mx-2' %>
            <% end %>
            <%= simple_form_for booking do |f| %>
              <%= f.input :status, as: :hidden, input_html: { value: 'declined'} %>
              <%= f.submit 'Decline', class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        <% else %>
          <h2 class="card-trip-text-padding"><%= booking.status %></h2>
        <% end %>
      </div>
    </div>
    <%= user_image_tag %>
  </div>
</div>
