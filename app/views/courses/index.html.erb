<div class="container">
  <h1>Result of: <%= params[:query] %></h1>
  <% @courses.each do |course| %>
    <% @title = course.name %>
    <% @description = course.description %>
    <% @price = course.price %>
    <%= link_to course_path(course) do %>
      <% render 'shared/course-card' %>
    <% end %>
  <% end %>
</div>
