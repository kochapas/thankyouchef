<div class="container">
  <% if params[:query] %>
    <h1>Result of: <%= params[:query] %></h1>
  <% else %>
    <h1>Our courses</h1>
  <% end %>
  <% @courses.each do |course| %>
    <%= link_to course_path(course) do %>
      <% render 'shared/course-card', title: course.name, status: "Â¥#{course.price}", 
      description: course.description, sub_title: course.cuisine_type,
      header_image_url: "https://source.unsplash.com/800x500/?food-'#{course.name.split[-2]}'",
      user_image_url: "https://source.unsplash.com/100x100/?face-'#{course.chef_profile.user_id}'" %>
    <% end %>
  <% end %>
</div>
